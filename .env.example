# Google Calendar Manager - Environment Variables Example
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# Google OAuth Credentials
GOOGLE_CLIENT_ID=your_client_id_here
GOOGLE_CLIENT_SECRET=your_client_secret_here
GOOGLE_REDIRECT_URI=urn:ietf:wg:oauth:2.0:oob

# Encryption Key for OAuth Tokens (32 bytes, base64 encoded)
# Generate with: php -r "echo base64_encode(random_bytes(32)) . PHP_EOL;"
ENCRYPTION_KEY=

# Application Settings
APP_DEBUG=false
APP_TIMEZONE=Europe/Rome

# Session Settings
SESSION_SECURE=true  # Set to true when using HTTPS

# Paths (optional, defaults are provided)
TOKEN_PATH=/var/www/html/token/token.json
LOG_PATH=/var/www/html/logs/calendar.log

# Logging
LOG_ENABLED=true
LOG_LEVEL=ERROR  # DEBUG, INFO, WARNING, ERROR
